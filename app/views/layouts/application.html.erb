<!DOCTYPE html>
<html>
  <head>
    <title>DojoForum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- 導覽列 -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Dojo</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="#">Feeds</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">All Post</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">New Post</a>
          </li>
        </ul>
        <% if current_user %>
          <ul class="navbar-nav ml-auto">
            <!-- 使用者下拉選單 -->
            <li class="nav-item dropdown">
              <a class="dropdown-toggle btn navbar-btn-1" data-toggle="dropdown">個人清單</a>
              <ul class="dropdown-menu">
                <% if current_user && current_user.admin? %>
                  <li class="dropdown-item"><%= link_to '管理者後台', admin_root_path %></li>
                <% end %>
                <li class="dropdown-item"><%= link_to('修改密碼', edit_user_registration_path) %></li>
                <li class="dropdown-item"><%= link_to('登出', destroy_user_session_path, method: :delete) %></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item btn navbar-btn-1"><%= link_to('註冊', new_user_registration_path) %></li>
            <li class="nav-item btn navbar-btn-1"><%= link_to('登入', new_user_session_path) %></li>
          </ul>
        <% end %>       
      </div>
    </nav>


    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
