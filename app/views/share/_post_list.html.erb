<table class="table">
  <thead>
    <tr>
      <th scope="col">Replies count</th>
      <th scope="col">Title</th>
      <th scope="col">Last replied at</th>
      <th scope="col">Viewed count</th>
    </tr>
  </thead>
  <tbody>  
    <% posts.each do |post| %>
      <tr>
        <td><%= post.replies_count %></td>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.last_reply %></td>
        <td><%= post.views_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_nav_bootstrap(@pagy) %>