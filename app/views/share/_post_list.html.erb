<%= grid(@posts_grid) do |g|
  g.column name: 'Replies count', attribute: 'replies_count', filter: false do |post|
    post.replies_count
  end

  g.column name: 'Title' do |post|
    link_to post.title, post_path(post)
  end

  g.column name: 'Permission' do |post|
    post.permission
  end

  g.column name: 'Last replied at', attribute: 'last_reply', filter: false do |post|
    post.last_reply_filter
  end

  g.column name: 'Viewed count', attribute: 'views_count', filter: false do |post|
    post.views_count
  end

end %>