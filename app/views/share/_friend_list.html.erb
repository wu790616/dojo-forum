<div class="friend-list" id="friend-<%= user.id %>">
  <%= image_tag user.avatar.url, class: "friend-avatar img-thumbnail" %>
  <%= link_to user.name, user_path(user) %>
  <!-- friend request action -->
  <% if current_user.request_friends.include?(user) %>
    <div style="padding-bottom: 5px;">
      <%= link_to 'Accept', friend_request_path(:user_id => user), method: :patch, class: "btn btn-sm btn btn-outline-success" %>
    </div>
    <div>
      <%= link_to 'Ignore', friend_request_path(:user_id => user), remote: true, method: :delete, class: "btn btn-sm btn btn-outline-danger" %>
    </div>  
  <% end %>
</div>
