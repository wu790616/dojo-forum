<h1>前台首頁</h1>
<h3>All Posts</h3>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Replies count</th>
      <th scope="col">Title</th>
      <th scope="col">Last replied at</th>
      <th scope="col">Viewed count</th>
    </tr>
  </thead>
  <tbody>  
    <% @posts.each do |post| %>
      <tr>
        <td>#</td>
        <td>
          <%= link_to post.title, post_path(post) %>
        </td>
        <td>#</td>
        <td>#</td>
      </tr>
    <% end %>
  </tbody>
</table>